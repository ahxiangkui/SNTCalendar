<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:gravity="center"
    android:id="@+id/ll_content"
    android:orientation="horizontal"
    android:background="#FFFFFF"
    android:foreground="@drawable/default_ripple"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            >
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/dateMonthSelectBgColor"
                android:id="@+id/v_select_bg_left"
                android:visibility="gone"
                />
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/dateMonthSelectBgColor"
                android:id="@+id/v_select_bg_right"
                android:visibility="gone"
                />
        </LinearLayout>
        <View
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/calender_select_bg"
            android:id="@+id/v_select_bg"
            />
        <TextView
            android:layout_gravity="center"
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="10"
            android:textColor="@color/dateTxtColor"
            android:textSize="14sp"
            />
    </FrameLayout>


</LinearLayout>
